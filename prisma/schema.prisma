generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  OWNER
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String?
  image    String?

  role UserRole @default(ADMIN)

  is_active Boolean @default(true)

  last_login DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model PaymentCard {
  id               String   @id @default(uuid())
  card_name        String
  card_number      String
  card_holder_name String
  is_active        Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model TelegramUser {
  id         BigInt  @id
  first_name String
  last_name  String?
  username   String?
  photo_url  String?

  balance    Float   @default(0)
  is_blocked Boolean @default(false)

  last_online          DateTime?
  balance_notification Boolean   @default(true)
  tests_notification Boolean   @default(true)

  purchaseFiles Int @default(0)
  purchaseTests Int @default(0)

  deposits Deposit[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  purchases Purchase[]
}

model Deposit {
  id             String @id @default(uuid())
  telegramUserId BigInt

  telegramUser TelegramUser @relation(fields: [telegramUserId], references: [id], onDelete: Cascade)
  amount       Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subject {
  id             String          @id @default(uuid())
  name           String
  sortOrder      Int             @default(1)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  testSets       TestSet[]
  questionGrades QuestionGrade[]
}

model FileCategory {
  id        String   @id @default(uuid())
  name      String
  sortOrder Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  files File[]
}

model File {
  id            String   @id @default(uuid())
  categoryId    String?
  title         String
  description   String?
  fileUrl       String?
  isFree        Boolean  @default(true)
  price         Int      @default(0)
  downloadCount Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  category  FileCategory? @relation(fields: [categoryId], references: [id])
  purchases Purchase[]
}

enum AnswerOption {
  A
  B
  C
  D
}

model TestSet {
  id        String @id @default(uuid())
  subjectId String

  title String

  sortOrder Int @default(1)

  isFree Boolean @default(true)
  price  Int     @default(0)

  subject Subject     @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  topics  TestTopic[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  purchases Purchase[]

  @@unique([subjectId, title])
  @@index([subjectId, sortOrder])
}

model TestTopic {
  id        String @id @default(uuid())
  testSetId String

  title     String
  sortOrder Int    @default(1)

  testSet   TestSet        @relation(fields: [testSetId], references: [id], onDelete: Cascade)
  questions TestQuestion[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([testSetId, title])
  @@index([testSetId, sortOrder])
}

model TestQuestion {
  id      String @id @default(uuid())
  topicId String

  text String

  imageUrl String?

  optionA String
  optionB String
  optionC String
  optionD String

  correct AnswerOption

  topic TestTopic @relation(fields: [topicId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([topicId])
}

enum PurchaseItemType {
  FILE
  TEST_SET
}

model Purchase {
  id             String           @id @default(uuid())
  telegramUserId BigInt
  itemType       PurchaseItemType

  fileId    String?
  testSetId String?

  amount    Int      @default(0)
  createdAt DateTime @default(now())

  telegramUser TelegramUser @relation(fields: [telegramUserId], references: [id], onDelete: Cascade)

  file    File?    @relation(fields: [fileId], references: [id], onDelete: Cascade)
  testSet TestSet? @relation(fields: [testSetId], references: [id], onDelete: Cascade)

  @@unique([telegramUserId, fileId])
  @@unique([telegramUserId, testSetId])
  @@index([telegramUserId])
  @@index([itemType])
}

model QuestionGrade {
  id        String @id @default(uuid())
  subjectId String

  name      String
  sortOrder Int    @default(1)

  subject Subject         @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  topics  QuestionTopic[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([subjectId, sortOrder])
}

model QuestionTopic {
  id      String @id @default(uuid())
  gradeId String

  name      String
  sortOrder Int    @default(1)

  grade     QuestionGrade @relation(fields: [gradeId], references: [id], onDelete: Cascade)
  questions Question[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([gradeId, sortOrder])
}

model Question {
  id      String @id @default(uuid())
  topicId String

  question String
  answer   String

  sortOrder Int     @default(1)
  imageUrl  String?

  topic QuestionTopic @relation(fields: [topicId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([topicId, sortOrder])
}
